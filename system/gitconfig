[user]
	name = Levi Figueira
	email = me@levifig.com
[alias]
  # From http://mikewest.org/2011/04/a-quick-git-vim-workflow-tip
  fshow = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
  edit  = ! sh -c '$EDITOR `git fshow $1`' -
	co = checkout
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
[core]
	excludesfile = /Users/levifig/.gitignore.global
	editor = vim 
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[push]
	default = simple
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
	keepBackup = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = Kaleidoscope
[mergetool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

